<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tethys.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Themes/GreenWave.xaml"/>
        <ResourceDictionary Source="Button.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="Secondary" Color="#aaa"/>
    <SolidColorBrush x:Key="Success" Color="#22d7bb"/>
    <SolidColorBrush x:Key="Warning" Color="#ffc442"/>
    <SolidColorBrush x:Key="Danger" Color="#ff5b57"/>
    <SolidColorBrush x:Key="Dark" Color="#333"/>

    <Style TargetType="FontIcon" x:Key="WtfIcon">
        <Setter Property="FontFamily" Value="Assets/iconfont.ttf#wtf"/>
    </Style>
</ResourceDictionary>
